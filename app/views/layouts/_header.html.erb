<header class="main-header">
  <div class="container-header">
    <div class="container">
      <div class="header-content navbar row justify-content-between
        align-items-center">
        <div class="logo-now col-auto">
          <span>
            <%= link_to image_tag("logo.png", alt:"rails_logo",
              class: "cover"), root_url, target: "_self" %>
          </span>
        </div>
        <div class="main-nav col">
          <%= link_to t("restaurant"), root_url, class:"nav-item active" %>
        </div>
        <div class="user-acc col-auto">
          <% if user_signed_in? %>
            <div class="dropdown" id="dropdiv">
              <div class="dropdown-toggle" role="button" id="user-dropdown"
                data-toggle="dropdown">
                <div class="img">
                  <%= image_tag current_user.image %>
                </div>
                <span class="name">
                  <%= current_user.name %>
                </span>
              </div>
              <div class="dropdown-menu" id="drop-menu"
                aria-labelledby="user-dropdown">
                <%= link_to orders_path, target: "_self" do %>
                  <div class="dropdown-item">
                    <span class="text">
                      <%= t("order_history") %>
                    </span>
                  </div>
                <% end %>
                <%= link_to profile_path, target: "_self" do %>
                  <div class="dropdown-item">
                    <span class="text">
                      <%= t("update_account") %>
                    </span>
                  </div>
                <% end %>
                <%= link_to signout_path, target: "_self", method: :delete do %>
                  <div class="dropdown-item">
                    <span class="text">
                      <%= t("log_out") %>
                    </span>
                  </div>
                <% end %>
              </div>
            </div>
          <% else %>
            <%= link_to signin_path do %>
              <button type="button" class="btn btn-none-bg btn-login">
                <%= t("log_in") %>
              </button>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</header>
