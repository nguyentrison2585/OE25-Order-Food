<% provide :title, t("log_in") %>
<div class="login-container">
  <div class="content">
    <h1 class="text-center mb-2">
      <%= t "log_in" %>
    </h1>
    <%= form_for resource, as: resource_name,
          url: session_path(resource_name) do |f| %>
      <div class="row">
        <div class="col-md-6 mlr-auto">
          <div class="form-group mb-4">
            <%= f.label t "email" do %>
              <%= t "email" %>
              <span class="form-required">*</span>
            <% end %>
            <%= f.email_field :email, class: "form-control required",
              required: true, placeholder: t("email") %>
          </div>
          <div class="form-group mb-4">
            <%= f.label t "password" do %>
              <%= t "password" %>
              <span class="form-required">*</span>
            <% end %>
            <%= f.password_field :password, class: "form-control required",
              required: true, placeholder: t("password") %>
          </div>
          <div class="form-group mb-4">
            <% if devise_mapping.rememberable? -%>
              <span class="checkbox-style checkbox-primary font-size-14">
                <%= f.check_box :remember_me %>
                <%= f.label t "remember_me" %>
              </span>
            <% end %>
            <%= link_to t("forgot_password?"), new_user_password_path,
              class: "text-primary float-right" %>
          </div>
          <%= f.submit t("log_in"),
            class: "btn sm-login btn-block" %>
        </div>
      </div>
    <% end %>
    <div class="divider-text mb-4">
      <span class="text text-gray-650">
        <%= t "or" %>
      </span>
    </div>
    <p class="text-center mb-4">
      <span class="text-gray-500">
        <%= t "dont_have_account" %>
      </span>
      <%= link_to t("sign_up"), signup_path, class: "text-primary" %>
    </p>
  </div>
</div>
