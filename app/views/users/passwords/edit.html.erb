<div class="newpass-container">
  <div class="content">
    <h1 class="h3 text-center mb-2">
      <%= t "reset_password" %>
    </h1>
    <%= form_for resource, as: resource_name, url: user_password_path,
      html: {:method => :put} do |f| %>
      <%= devise_error_messages! %>
      <%= f.hidden_field :reset_password_token %>
      <div class="row">
        <div class="col-md-6 mlr-auto">
          <div class="form-group mb-4">
            <%= f.label t "password" do %>
              <%= t "password" %>
              <span class="form-required">*</span>
            <% end %>
            <%= f.password_field :password, class: "form-control required",
              required: true, placeholder: t("password") %>
          </div>
          <div class="form-group mb-4">
            <%= f.label t "password_confirmation" do %>
              <%= t t "password_confirmation" %>
              <span class="form-required">*</span>
            <% end %>
            <%= f.password_field :password_confirmation, required: true,
              class: "form-control required", placeholder: t("password") %>
          </div>
          <button class="btn sm-login btn-block">
            <%= t "reset_password" %>
          </button>
        </div>
      </div>
    <% end %>
  </div>
</div>
